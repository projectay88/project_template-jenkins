pipeline {
    agent {
            label "debian"
        }
    options {
            timestamps()
        }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('who is branch?'){
                steps {
                        echo 'who is branch'
                    }
            }
        stage('name host'){
                steps {
                        sh 'hostname'
                    }
            }
    }
}
